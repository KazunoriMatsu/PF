<!-- 投稿詳細 -->
<%= render 'share/header' %>
<div class="container">
	<h3 class="title index_inner">投稿詳細</h3>
</div>

<div class="container">
	<div class="row">
			<div class="col-sm-6">
				<div class=""><%= @customer.last_name + @customer.first_name %></div>
			</div>
	</div>
	<div class="row">
			<div class="col-sm-3"><%= @post.title %>  <%= @post.categorie.name %></div>
			<div class="col-sm-2"></div>
	</div>

	<div class="row">
				<div class="col-sm-6"><%= @post.body %></div>
	</div>

		<div class="col-sm-6">
			<%= attachment_image_tag @post, :image, :fill, 300, 300, format: 'jpeg' %>
		</div>

	<%= link_to "削除", post_path(@post), method: :delete %>
</div>
