  <div class="container">
  <h3 class="top_inner"></h3>
  <div class="row">
    <% @customer.posts.each do |post| %>
       <div class="col-md-3">
         <div class="card1" style="width: 18rem;">
           <div class="img-size">
           <%= attachment_image_tag post, :image, :fill, 285, 200, format: 'jpeg' %>
           </div>
           <div class="card-body">
             <h5 class="card-title"><%= truncate(post.title, length: 17) %></h5>
             <p class="card-text ellipsis"><%= post.body %></p>
             <li1><%= truncate(post.categorie.name, length: 15) %></li1>
             <%= link_to post_path(post.id) do %>
                 <button2 class="b_size btn-design">詳細を見る</button2>
             <% end %>
           </div>
         </div>
       </div>
     <% end %>
   </div>
