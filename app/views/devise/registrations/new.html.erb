<div class='signinPage'>
    <div class='container'>
      <div class="form-wrapper">
          <div class='userIcon text-center'>
              <i class="fas fa-user fa-3x"></i>
            </div>
            <h2 class="title1">新規登録</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :お名前 %><br />
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "姓" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "名" %>
            </div>

            <div class="form-group">
              <%= f.label :フリガナ %><br />
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "セイ" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "メイ" %>
            </div>

            <div class="form-group">
              <%= f.label :電話番号 %><br />
              <%= f.text_field :phone_number1, autofocus: true, autocomplete: "phone_number1", placeholder: "000" %>
              <%= f.text_field :phone_number2, autofocus: true, autocomplete: "phone_number2", placeholder: "0000" %>
              <%= f.text_field :phone_number3, autofocus: true, autocomplete: "phone_number3", placeholder: "0000" %>
            </div>

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "メールアドレス" %>
            </div>

            <div class="form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "もう一度記入してください" %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "新規登録する", class: "loginBtn" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
